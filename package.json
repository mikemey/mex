{
  "name": "mex",
  "version": "0.1.0",
  "description": "mExchange",
  "author": "mikemey",
  "license": "ISC",
  "main": "src/index.js",
  "engines": {
    "node": ">=13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemey/mex.git"
  },
  "scripts": {
    "lint": "standard",
    "connectors-test": "mocha 'connectors-test/**/**.spec.js' -r chai/register-should",
    "session-test": "mocha 'session-test/**/**.spec.js' -r chai/register-should",
    "useraccount-test": "mocha 'useraccount-test/**/**.spec.js' -r chai/register-should",
    "utils-test": "mocha 'utils-test/**/**.spec.js' -r chai/register-should",
    "wallet-test": "mocha 'wallet-test/**/**.spec.js' -r chai/register-should",
    "module-test": "LOG_LEVEL=none ./run_module_tests.sh",
    "~single": "LOG_LEVEL=debug nodemon -x 'npm run connectors-test -s'",
    "e2e": "./browser-test/e2ehelper.sh",
    "pretest": "npm install",
    "test": "npm run lint -s && npm run module-test -s && npm run e2e -s"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "bitcoin-core": "3.0.0",
    "body-parser": "1.19.0",
    "cookie-session": "1.4.0",
    "csurf": "1.11.0",
    "express": "4.17.1",
    "express-ws": "4.0.0",
    "jsonwebtoken": "9.0.0",
    "moment": "2.29.1",
    "mongodb": "3.6.4",
    "mongoose": "5.11.18",
    "mongoose-long": "0.3.2",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "passport-local-mongoose": "6.1.0",
    "pug": "3.0.2",
    "ws": "7.4.3",
    "zeromq": "5.2.0"
  },
  "devDependencies": {
    "chai": "4.3.1",
    "chai-http": "4.3.0",
    "chai-string": "1.5.0",
    "cheerio": "1.0.0-rc.5",
    "cypress": "6.6.0",
    "download": "8.0.0",
    "mocha": "8.3.0",
    "nodemon": "2.0.7",
    "standard": "16.0.3",
    "underscore": "1.12.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "BigInt",
      "cy",
      "Cypress",
      "expect"
    ]
  }
}
