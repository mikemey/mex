block variables
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title=`mex ${page_title}`
    each scriptUrl in vendors.scripts
      script(src=scriptUrl)
    each styleUrl in vendors.styles
      link(rel="stylesheet" href=styleUrl)
    block htmlhead
  body
  .container-fluid.mt-4
    #header
      .p-3.mb-2.bg-warning.text-dark.text-center 
        b Server is using TESTNET connectors. Do NOT send real tokens!

      ul.nav.justify-content-center
        if user
          li.nav-item
            a.nav-link(href=`${basepath}/index`) Home
          li.nav-item
            a.nav-link(href=`${basepath}/balance`) Balances
          li.nav-item 
            span.nav-link #{user.email}
        else
          li.nav-item
            a.nav-link(href=`${basepath}/login`) Login
          li.nav-item
            a.nav-link(href=`${basepath}/register`) Register

    block content
    block foot
      footer.footer.mt-auto.py-4
        .text-right
          small.text-muted mex v0.1
