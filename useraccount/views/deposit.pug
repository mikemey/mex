extends layout.pug
block variables
  - var page_title = `${symbol} deposits`

block content
  h2 #{symbol.toUpperCase()} Deposits
  #deposit-address(data-address=symbol)=address

  table(style="border: 1px solid black;")
    thead
      tr
        th Date
        th Amount
        th Block
        th Invoice
    tbody
      each invoice in invoices
        tr(data-invoice=invoice.id)
          td #{invoice.hrdate}
          td #{invoice.hramount}
          td
            a(href=invoice.block.href)=invoice.block.id
          td
            a(href=invoice.href)=invoice.id
