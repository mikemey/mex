extends layout.pug
block variables
  - var page_title = 'registration'

block content
  .offset-md-2.col-md-8
    h3 Registration
    form(method="POST")
      .form-group.row
        label.col-sm-2.col-form-label(for="email") Email
        .col-sm-10
          input.form-control#email(type="email" name="email" placeholder="Email" value=email required autofocus)
      .form-group.row
        label.col-sm-2.col-form-label(for="password") Password
        .col-sm-10
          input.form-control#password(type="password" minlength="8" name="password" placeholder="Password" autocomplete="new-password" required)
      .form-group.row
        label.col-sm-2.col-form-label(for="confirmation") Confirm password
        .col-sm-10
          input.form-control#confirmation(type="password" minlength="8" name="confirmation" placeholder="Confirmation" autocomplete="new-password" required)
      .form-group.row
        .col-sm-10
          button.btn.btn-success#register(type="submit") Register

      if error
        .form-group.row
          .col-sm-12
            #error.alert.alert-danger.w-100= error